---
// /src/pages/blog/[page].astro
import BlogPost from '../../components/BlogPost.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths({ paginate }) {
  const allPosts = await Astro.glob('../../pages/posts/*.md');
  const sortedPosts = allPosts.sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate));
  return paginate(sortedPosts, { pageSize: 5, params: page => ({ pageNumber: page + 1 }) });
}

const { page } = Astro.props;
const currentPage = page.currentPage;
const totalPages = page.lastPage;
---

<BaseLayout pageTitle={'Page ' + currentPage}>
  <div class="container">
    <div id="grid-container" class="grid-container">
      {page.data.map((post) => (
        <div class="grid-item">
          <div class="image-container">
            <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt}>
          </div>
          <h3 class="title">{post.frontmatter.title}</h3>
          <p class="description">{post.frontmatter.description}</p>
          <a href={post.url} class="read-more">READ MORE</a>
        </div>
      ))}
    </div>
  </div>

  <nav aria-label="Pagination">
    <ul class="pagination">
      <li class={currentPage === 1 ? 'disabled' : ''}>
        <a href={currentPage > 1 ? `/blog/${currentPage - 1}` : '#'}>«</a>
      </li>
      <li>
        <a href="/blog/1" class={currentPage === 1 ? 'active' : ''}>1</a>
      </li>
      {currentPage > 3 && <li><span>…</span></li>}
      {Array.from({ length: totalPages }, (_, i) => i + 1)
        .filter(page => page > 1 && page < totalPages)
        .slice(currentPage > 3 ? currentPage - 2 : 0, currentPage + 1)
        .map(page => (
          <li key={page}>
            <a href={`/blog/${page}`} class={currentPage === page ? 'active' : ''}>{page}</a>
          </li>
        ))}
      {currentPage < totalPages - 2 && <li><span>…</span></li>}
      <li>
        <a href={`/blog/${totalPages}`} class={currentPage === totalPages ? 'active' : ''}>{totalPages}</a>
      </li>
      <li class={currentPage === totalPages ? 'disabled' : ''}>
        <a href={currentPage < totalPages ? `/blog/${currentPage + 1}` : '#'}>»</a>
      </li>
    </ul>
  </nav>
</BaseLayout>

<style>
        body {
            font-family: 'Lato', sans-serif;
            background-color: #2C2F33;
            margin: 0;
            padding: 0;
            color: #FFF;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            padding: 20px;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .grid-item {
            background-color: #23272A;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .grid-item:hover {
            transform: translateY(-10px);
        }

        .image-container {
            width: 100%;
            height: 150px;
            background-color: #444;
            overflow: hidden;
        }

        .grid-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .title {
            font-size: 1.4em;
            margin: 15px;
            color: #FFCC00;
        }

        .description {
            font-size: 1em;
            margin: 0 15px 15px 15px;
            flex-grow: 1;
            color: #E6E6E6;
        }

        .read-more {
            display: block;
            padding: 15px;
            background-color: #7289DA;
            color: #FFF;
            text-align: center;
            text-decoration: none;
            border-radius: 0 0 10px 10px;
            transition: background-color 0.3s ease;
        }

        .read-more:hover {
            background-color: #5B6EAE;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        .pagination a {
            color: #FFF;
            background-color: #7289DA;
            padding: 10px 15px;
            margin: 0 5px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .pagination a:hover {
            background-color: #5B6EAE;
        }

        .pagination a.active {
            background-color: #5B6EAE;
        }

        .pagination a.disabled {
            background-color: #444;
            cursor: not-allowed;
        }

        @media (max-width: 900px) {
            .grid-container {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }

        @media (max-width: 600px) {
            .grid-container {
                grid-template-columns: 1fr;
            }
        }
    </style>